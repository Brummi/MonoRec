{
  "name": "monorec_depth_ref",
  "n_gpu": 8,
  "arch": {
    "type": "MonoRecModel",
    "args": {
      "pretrain_mode": 0,
      "pretrain_dropout": 0,
      "use_mono": true,
      "use_stereo": false,
      "augmentation": "depth",
      "depth_cp_loc": [
        "saved/models/monorec_depth/00/checkpoint.pth"
      ],
      "mask_cp_loc": [
        "saved/models/monorec_mask_ref/00/checkpoint.pth"
      ],
      "freeze_module": [
        "att"
      ]
    }
  },
  "data_loader": {
    "type": "KittiOdometryDataloader",
    "args": {
      "dataset_dir": "../data/dataset",
      "depth_folder": "image_depth_sparse",
      "batch_size": 8,
      "frame_count": 2,
      "shuffle": true,
      "validation_split": 0,
      "num_workers": 16,
      "sequences": [
        "01",
        "02",
        "06",
        "08",
        "09",
        "10"
      ],
      "target_image_size": [
        256,
        512
      ],
      "use_color": true,
      "use_color_augmentation": true,
      "use_dso_poses": true,
      "lidar_depth": false,
      "dso_depth": true,
      "return_stereo": true,
      "return_mvobj_mask": true,
      "use_index_mask": []
    }
  },
  "val_data_loader": {
    "type": "KittiOdometryDataloader",
    "args": {
      "dataset_dir": "../data/dataset",
      "depth_folder": "image_depth_annotated",
      "batch_size": 8,
      "frame_count": 2,
      "shuffle": false,
      "validation_split": 0,
      "num_workers": 16,
      "sequences": [
        "00",
        "04",
        "05",
        "07"
      ],
      "target_image_size": [
        256,
        512
      ],
      "max_length": 32,
      "use_color": true,
      "use_color_augmentation": true,
      "use_dso_poses": true,
      "lidar_depth": true,
      "dso_depth": false,
      "return_stereo": true,
      "return_mvobj_mask": true,
      "use_index_mask": []
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.00001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "depth_refinement_loss",
  "metrics": [
    "a1_sparse_metric",
    "abs_rel_sparse_metric",
    "rmse_sparse_metric"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 15,
      "gamma": 0.1
    }
  },
  "trainer": {
    "compute_mask": true,
    "compute_stereo_pred": true,
    "mult_mask_on_cv": true,
    "epochs": 4,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min abs_rel_sparse_metric",
    "log_step": 6400,
    "alpha": 0.5,
    "max_distance": 80,
    "timestamp_replacement": "00",
    "tensorboard": true
  }
}